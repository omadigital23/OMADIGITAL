{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "es2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": false,
    "noPropertyAccessFromIndexSignature": false,
    "useUnknownInCatchVariables": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/styles/*": ["./styles/*"],
      "@/types/*": ["./src/types/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "src/supabase/functions",
    "supabase/functions",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "__tests__",
    "scripts",
    "tmp_*.tsx",
    "tmp_*.ts",
    "TEMPLATE_*.tsx",
    "TEMPLATE_*.ts",
    "src/lib/newsletter-monitoring.ts",
    "deploy-to-production.js",
    "generate-cert.js",
    "test-*.tsx",
    "test-*.ts",
    "pages/chatbot-language-audit.tsx",
    "pages/test-huggingface-tts.tsx",
    "src/lib/huggingface-tts.ts",
    "src/lib/gemini-service.ts",
    "pages/api/chat/gemini-unified.ts",
    "pages/api/chat/send.ts"
  ]
}