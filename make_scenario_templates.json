        "name": "Webhook Receiver",
        "config": {
          "url": "https://hook.us2.make.com/upafrqdjez0uoj8w8y5iloeqqkhd0xrf",
          "method": "POST"
        }
      },
      {
        "id": 2,
        "type": "filter",
        "name": "Filter Nouvelles Inscriptions",
        "conditions": [
          {"field": "event", "operator": "equals", "value": "INSERT"},
